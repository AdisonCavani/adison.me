---
import { slugify } from "@lib/Helpers";

interface Props {
  currentTag?: string | undefined;
  posts: any;
  tags: any;
}

const { currentTag, posts, tags } = Astro.props;
---

<h1 class="text-5xl font-bold">Blog</h1>

<div class="flow-root mt-8 text-sm text-gray-400">
  <div class="-m-4 flex flex-row">
    {
      tags.map((tag: any) => (
        <a
          href={`/blog/tag/${slugify(tag)}`}
          class={`m-2 px-2 py-1 ${
            slugify(tag) === currentTag
              ? "rounded bg-neutral-100"
              : "hover:underline"
          }`}
        >
          {tag}
        </a>
      ))
    }
  </div>
</div>

<section class="mt-8">
  {
    posts.map((post: any) => (
      <div class="py-8 border-t border-gray-200 grid sm:grid-cols-3 gap-2">
        <div class="w-56 text-gray-500">
          <time datetime={post.frontmatter.pubDate}>
            {new Date(post.frontmatter.pubDate).toLocaleDateString("en-us", {
              month: "long",
              day: "numeric",
              year: "numeric",
            })}
          </time>
          <div class="flow-root mt-8 text-sm text-neutral-400">
            <div class="-m-2 flex flex-wrap">
              {post.frontmatter.tags[0].split(";").map((tag: string) => (
                <a
                  href={`/blog/tag/${slugify(tag)}`}
                  class="m-2 hover:underline"
                >
                  {tag}
                </a>
              ))}
            </div>
          </div>
        </div>
        <a href={post.url} class="sm:col-span-2">
          <h2 class="text-2xl text-gray-900 font-bold">
            {post.frontmatter.title}
          </h2>
          <p class="mt-4 text-gray-900">{post.frontmatter.description}</p>
        </a>
      </div>
    ))
  }
</section>
